extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Registration Details
                    div.signup-wall
                        form(action='/addpost', method='POST')
                            input(type='text', name='post_name', placeholder='post name',required, autofocus)
                            textarea(name="postBody",required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Add post
                            span.clearfix